{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "es2022",
        "preserveConstEnums": true,
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "target": "es2022",
        "types": ["node"],
        "experimentalDecorators": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
